# Luanti (Minetest) server configuration for Yardstick benchmarking

# Basic server settings
server_name = Yardstick Benchmark
port = 30000
name = yardstick
default_game = minetest
world = world

# Performance related settings
server_dedicated = true
max_users = 100
active_object_send_range_blocks = 5
active_block_range = 3

# Network settings
max_packets_per_iteration = 1024
server_address = 0.0.0.0
enable_ipv6 = false
max_simultaneous_block_sends_per_client = 40
time_send_interval = 10

# Optimization settings
max_block_send_distance = 8
server_map_save_interval = 300
server_unload_unused_data_timeout = 60
unload_unused_data_timeout = 60
max_objects_per_block = 100

# Debugging/profiling settings
profiler = true
enable_console = true

# Yardstick monitoring mod
secure.enable_security = false
secure.http_mods = yardstick_collector

# Mod settings
load_mod_yardstick_collector = true 